# MongoDB Connection (Required for waitlist and auth database)
DATABASE_URL="mongodb+srv://username:password@your-cluster.mongodb.net/subscriptions-tracker?retryWrites=true&w=majority"

# NextAuth Configuration (Required for authentication)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-a-random-secret-key-here" # Run `openssl rand -base64 32` to generate
ADMIN_SECRET_KEY="your-admin-creation-secret-key"   # Used for creating admin users via API

# Admin API Key (for accessing protected endpoints like waitlist stats)
ADMIN_API_KEY="your-secret-api-key"

# Google Analytics 4 Measurement ID
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Microsoft Clarity Project ID
NEXT_PUBLIC_CLARITY_PROJECT_ID=xxxxxxxxxx

# Google Site Verification
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
