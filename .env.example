# Database URL (use existing subscriptions database)
DATABASE_URL="mongodb://localhost:27017/subscriptions"

# Authentication
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-random-secret-key-here"

# Google Analytics - optional
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Microsoft Clarity - optional
NEXT_PUBLIC_CLARITY_PROJECT_ID="xxxxxxxx"

# Google Site Verification - optional
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Base URL for canonical links
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# Environment type - development, staging, production
NODE_ENV="development"